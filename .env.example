# =======================
# Environment Configuration
# =======================
VITE_APP_ENV=development
NODE_ENV=development

# =======================
# API Configuration
# =======================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# =======================
# Application Configuration
# =======================
VITE_APP_NAME=User Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive User Management and Admin Dashboard

# =======================
# Build Configuration
# =======================
VITE_BUILD_DATE=
VITE_VCS_REF=
VITE_BUILD_TARGET=

# =======================
# Security Configuration
# =======================
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CONTENT_SECURITY_POLICY_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_XSS_PROTECTION=true

# =======================
# Authentication Configuration
# =======================
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_AUTH_SESSION_TIMEOUT=1800

# =======================
# Localization Configuration
# =======================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de
VITE_I18N_DEBUG=false

# =======================
# Performance Configuration
# =======================
VITE_ENABLE_PWA=true
VITE_ENABLE_SW=true
VITE_CACHE_DURATION=86400
VITE_VIRTUAL_SCROLL_ENABLED=true

# =======================
# Monitoring Configuration
# =======================
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING=true
VITE_SENTRY_DSN=

# =======================
# Development Configuration
# =======================
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true

# =======================
# Feature Flags
# =======================
VITE_FEATURE_RBAC=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_EXPORT_DATA=true

# =======================
# AWS Configuration (for production deployment)

# ============================================
# Production Environment Configuration
# User Management System - React 19 Enterprise
# ============================================

# Application Information
VITE_APP_ENV=production
VITE_APP_NAME=User Management System
VITE_VERSION=1.0.0

# Backend API Configuration
# IMPORTANT: Update these URLs before deployment
VITE_BACKEND_URL=https://api.yourdomain.com
VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
VITE_API_TIMEOUT=30000

# Feature Flags (Review and configure before production)
VITE_ENABLE_GDPR=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_AUDIT_LOGS=true
VITE_ENABLE_HEALTH_CHECK=true
VITE_ENABLE_2FA=true
VITE_ENABLE_RBAC=true

# Security Configuration
VITE_TOKEN_REFRESH_ENABLED=true
VITE_SESSION_TIMEOUT=1800
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900
VITE_PASSWORD_MIN_LENGTH=12
VITE_REQUIRE_STRONG_PASSWORD=true

# Encryption (CRITICAL: Change in production)
# Generate a strong key: openssl rand -base64 32
VITE_ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_KEY

# Monitoring & Error Tracking
# Sign up at https://sentry.io to get your DSN
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Analytics Configuration
# Google Analytics 4 (GA4) - Get your ID from analytics.google.com
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_ANALYTICS_DEBUG=false

# Google Tag Manager (Optional)
VITE_GTM_ID=GTM-XXXXXXX

# Logging Configuration
VITE_LOG_LEVEL=error
VITE_ENABLE_DEBUG=false
VITE_ENABLE_CONSOLE_LOGS=false

# Performance & Build Configuration
VITE_ENABLE_SOURCEMAPS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_WEB_VITALS=true

# UI Configuration
VITE_ITEMS_PER_PAGE=20
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=.csv,.json,.xlsx
VITE_THEME_MODE=system
VITE_DEFAULT_LOCALE=en-US

# Rate Limiting (Frontend display only - backend enforces)
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# CDN Configuration (if using CloudFront or similar)
# Update after setting up CDN
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_ASSET_PREFIX=/assets/

# Social Media & SEO
VITE_SITE_URL=https://yourdomain.com
VITE_SITE_NAME=User Management System
VITE_TWITTER_HANDLE=@yourdomain
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Compliance & Legal
VITE_PRIVACY_POLICY_URL=https://yourdomain.com/privacy-policy
VITE_TERMS_URL=https://yourdomain.com/terms-of-service
VITE_GDPR_ENABLED=true

# ============================================
# DEPLOYMENT CHECKLIST:
# ============================================
# [ ] Update VITE_BACKEND_URL with actual API URL
# [ ] Update VITE_API_BASE_URL with actual API URL
# [ ] Generate and set VITE_ENCRYPTION_KEY
# [ ] Configure VITE_SENTRY_DSN for error monitoring
# [ ] Set VITE_ANALYTICS_ID for Google Analytics
# [ ] Update VITE_CDN_URL if using CDN
# [ ] Update VITE_SITE_URL with actual domain
# [ ] Review and enable/disable feature flags
# [ ] Verify VITE_ENABLE_SOURCEMAPS=false
# [ ] Verify VITE_ENABLE_DEBUG=false
# [ ] Update social media handles
# [ ] Test all environment variables
# ============================================

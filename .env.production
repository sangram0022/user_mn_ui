# =======================
# Production Environment Configuration
# =======================
VITE_APP_ENV=production
NODE_ENV=production

# =======================
# API Configuration
# =======================
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=2

# =======================
# Application Configuration
# =======================
VITE_APP_NAME=User Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive User Management and Admin Dashboard

# =======================
# Security Configuration (Production)
# =======================
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CONTENT_SECURITY_POLICY_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_XSS_PROTECTION=true

# =======================
# Authentication Configuration (Production)
# =======================
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY=1800
VITE_AUTH_SESSION_TIMEOUT=900

# =======================
# Localization Configuration
# =======================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de
VITE_I18N_DEBUG=false

# =======================
# Performance Configuration (Production)
# =======================
VITE_ENABLE_PWA=true
VITE_ENABLE_SW=true
VITE_CACHE_DURATION=604800
VITE_VIRTUAL_SCROLL_ENABLED=true

# =======================
# Monitoring Configuration (Production)
# =======================
VITE_ANALYTICS_ENABLED=true
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING=true

# =======================
# Production Configuration
# =======================
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_HOT_RELOAD=false
VITE_SOURCE_MAPS=false

# =======================
# Feature Flags (Production)
# =======================
VITE_FEATURE_RBAC=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_EXPORT_DATA=true

# =======================
# Docker Configuration (Production)
# =======================
CONTAINER_PORT=8080